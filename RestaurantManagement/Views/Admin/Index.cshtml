@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="py-5 bg-light min-vh-100">
    <div class="container">
        <!-- Welcome Banner -->
        <div class="text-center bg-primary text-white rounded-4 p-4 mb-5 shadow-sm">
            <h1 class="fw-bold">Welcome Back, Admin 👋</h1>
            <p class="opacity-75 mb-3">Manage your restaurant efficiently with your admin dashboard</p>
            <div class="d-flex justify-content-center flex-wrap gap-2">
                <a href="#" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-graph-up me-2"></i>View Reports
                </a>
                <a href="#" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-bell me-2"></i>Notifications
                </a>
                <a href="#" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-gear me-2"></i>Settings
                </a>
            </div>
        </div>

        <!-- Stats -->
        <div class="row text-center mb-5">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-inline-flex align-items-center justify-content-center mb-3" style="width:70px;height:70px;">
                            <i class="bi bi-receipt fs-3"></i>
                        </div>
                        <h2 class="fw-bold">156</h2>
                        <p class="text-muted mb-0">Total Orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="rounded-circle bg-success bg-opacity-10 text-success d-inline-flex align-items-center justify-content-center mb-3" style="width:70px;height:70px;">
                            <i class="bi bi-grid-1x2 fs-3"></i>
                        </div>
                        <h2 class="fw-bold">12</h2>
                        <p class="text-muted mb-0">Categories</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="rounded-circle bg-warning bg-opacity-10 text-warning d-inline-flex align-items-center justify-content-center mb-3" style="width:70px;height:70px;">
                            <i class="bi bi-egg-fried fs-3"></i>
                        </div>
                        <h2 class="fw-bold">45</h2>
                        <p class="text-muted mb-0">Menu Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <div class="rounded-circle bg-danger bg-opacity-10 text-danger d-inline-flex align-items-center justify-content-center mb-3" style="width:70px;height:70px;">
                            <i class="bi bi-people fs-3"></i>
                        </div>
                        <h2 class="fw-bold">89</h2>
                        <p class="text-muted mb-0">Active Users</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dashboard Header -->
        <div class="text-center mb-5">
            <h2 class="fw-bold text-primary">Admin Dashboard</h2>
            <p class="text-muted">Manage all aspects of your restaurant from one centralized location</p>
        </div>

        <!-- Features -->
        <div class="row">
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 text-center">
                    <div class="card-body">
                        <i class="bi bi-grid-1x2-fill text-success fs-1 mb-3"></i>
                        <h5 class="fw-bold">Categories</h5>
                        <p class="text-muted small mb-3">Organize your menu with categories and subcategories.</p>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-success w-100">
                            <i class="bi bi-sliders me-2"></i>Manage
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 text-center">
                    <div class="card-body">
                        <i class="bi bi-egg-fried text-warning fs-1 mb-3"></i>
                        <h5 class="fw-bold">Menu Items</h5>
                        <p class="text-muted small mb-3">Add, edit, and manage your restaurant's dishes.</p>
                        <a asp-controller="MenuItem" asp-action="Index" class="btn btn-warning w-100 text-dark fw-semibold">
                            <i class="bi bi-pencil-square me-2"></i>Manage
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 text-center">
                    <div class="card-body">
                        <i class="bi bi-cart-check-fill text-primary fs-1 mb-3"></i>
                        <h5 class="fw-bold">Orders</h5>
                        <p class="text-muted small mb-3">Track and manage customer orders in real-time.</p>
                        <a asp-controller="Order" asp-action="Index" class="btn btn-primary w-100">
                            <i class="bi bi-eye me-2"></i>View Orders
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card h-100 shadow-sm border-0 text-center">
                    <div class="card-body">
                        <i class="bi bi-person-badge-fill text-danger fs-1 mb-3"></i>
                        <h5 class="fw-bold">Users</h5>
                        <p class="text-muted small mb-3">Manage user accounts and assign admin roles.</p>
                        <a asp-controller="Account" asp-action="addAdmin" class="btn btn-danger w-100">
                            <i class="bi bi-person-plus me-2"></i>Add Admin
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logout Section -->
        <div class="text-center bg-white shadow-sm rounded-4 p-4 mt-5">
            <h5 class="text-muted mb-3">Session Management</h5>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-danger px-4 py-2 fw-semibold">
                <i class="bi bi-box-arrow-right me-2"></i>Logout from Dashboard
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            document.querySelectorAll(".card h2").forEach(stat => {
                const target = parseInt(stat.textContent);
                let count = 0;
                const interval = setInterval(() => {
                    stat.textContent = ++count;
                    if (count >= target) clearInterval(interval);
                }, 20);
            });
        });
    </script>
}
