@model Order
@{
    ViewData["Title"] = "Shopping Cart";
}

<style>
    /* === التنسيقات الأساسية === */
    .cart-section {
        padding: 30px 0;
        background-color: #f8f9fa;
        min-height: 70vh;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }

    .empty-cart {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    .empty-icon {
        font-size: 80px;
        color: #bdc3c7;
        margin-bottom: 20px;
    }

    .btn-continue {
        display: inline-block;
        background: #3498db;
        color: white;
        padding: 12px 25px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-continue:hover {
            background: #2980b9;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            color: white;
        }

    .cart-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .cart-header {
        background: #2c3e50;
        color: white;
        padding: 20px 30px;
    }

    .cart-body {
        padding: 30px;
    }

    /* === تحسين تنسيق الجدول === */
    .table {
        margin-bottom: 0;
    }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #2c3e50;
            padding: 15px 10px;
            background-color: #f8f9fa;
        }

        .table td {
            padding: 20px 10px;
            vertical-align: middle;
            border-color: #f1f2f6;
        }

    /* === تحسين تنسيق الصور === */
    .item-image {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
        margin-right: 15px;
        flex-shrink: 0;
    }

    .image-placeholder {
        width: 70px;
        height: 70px;
        background: #f1f2f6;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
        flex-shrink: 0;
    }

        .image-placeholder i {
            font-size: 24px;
            color: #bdc3c7;
        }

    .item-info {
        flex: 1;
        min-width: 0;
    }

    .item-name {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 5px;
        font-size: 16px;
    }

    .item-description {
        color: #7f8c8d;
        font-size: 14px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    /* === تنسيقات الكميات === */
    .quantity-controls {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .btn-quantity {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .btn-decrease {
        background: #e74c3c;
        color: white;
    }

    .btn-increase {
        background: #2ecc71;
        color: white;
    }

    .btn-quantity:hover {
        transform: scale(1.1);
        color: white;
    }

    .quantity-display {
        margin: 0 12px;
        font-weight: 600;
        font-size: 16px;
        min-width: 30px;
        text-align: center;
    }

    /* === تنسيقات الأسعار === */
    .price-value, .subtotal-value {
        font-weight: 600;
        color: #2c3e50;
        font-size: 16px;
    }

    /* === تنسيقات الأزرار === */
    .btn-remove {
        color: #e74c3c;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.2s ease;
    }

        .btn-remove:hover {
            color: #c0392b;
        }

    /* === تنسيقات نموذج العميل === */
    .customer-form {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
    }

    .form-label {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
        }

    /* === تنسيقات قسم التوصيل === */
    .delivery-section {
        margin-top: 15px;
        display: none;
    }

        .delivery-section.active {
            display: block;
        }

    .estimated-time {
        background: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 10px;
        padding: 15px;
        margin-top: 15px;
        text-align: center;
    }

        .estimated-time strong {
            color: #856404;
        }

    /* === تنسيقات تأكيد الطلب === */
    .btn-confirm {
        background: #27ae60;
        color: white;
        border: none;
        padding: 14px 25px;
        border-radius: 8px;
        font-weight: 600;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-confirm:hover {
            background: #219653;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

    /* === تنسيقات ملخص الطلب === */
    .summary-card {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        height: 100%;
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #e9ecef;
    }

    .summary-label {
        color: #6c757d;
    }

    .summary-value {
        font-weight: 600;
        color: #2c3e50;
    }

    .total-row {
        border-bottom: none;
        border-top: 2px solid #dee2e6;
        margin-top: 10px;
        padding-top: 15px;
    }

    .total-label {
        font-weight: 700;
        font-size: 18px;
        color: #2c3e50;
    }

    .total-value {
        font-weight: 700;
        font-size: 18px;
        color: #27ae60;
    }

    .discount-alert {
        background: #d4edda;
        border: 1px solid #c3e6cb;
        border-radius: 8px;
        padding: 15px;
        margin: 15px 0;
    }

    .alert-info {
        background: #d1ecf1;
        border: 1px solid #bee5eb;
        color: #0c5460;
        border-radius: 8px;
        padding: 12px;
    }

    /* === التجاوب مع الشاشات الصغيرة === */
    @@media (max-width: 768px) {
        .cart-body {
            padding: 20px 15px;
        }

    .table-responsive {
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

    .table thead {
        display: none;
    }

    .table, .table tbody, .table tr, .table td {
        display: block;
        width: 100%;
    }

        .table tr {
            margin-bottom: 20px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
        }

        .table td {
            text-align: right;
            padding: 10px 15px;
            border: none;
            position: relative;
        }

            .table td:before {
                content: attr(data-label);
                position: absolute;
                left: 15px;
                font-weight: 600;
                color: #2c3e50;
            }

    .item-image {
        width: 60px;
        height: 60px;
    }

    .image-placeholder {
        width: 60px;
        height: 60px;
    }

    .item-name {
        font-size: 15px;
    }

    .item-description {
        font-size: 13px;
        -webkit-line-clamp: 1;
    }

    .quantity-controls {
        justify-content: flex-end;
    }

    .btn-remove {
        display: block;
        text-align: center;
        padding: 8px;
        border: 1px solid #e74c3c;
        border-radius: 5px;
        margin-top: 5px;
    }

    .row.mt-4 {
        margin-top: 20px !important;
    }

    .col-lg-6 {
        margin-bottom: 20px;
    }

    }

    @@media (max-width: 576px) {
        .page-title

    {
        font-size: 24px;
    }
    

    .cart-header h4 {
        font-size: 18px;
    }

    .item-image {
        width: 50px;
        height: 50px;
    }

    .image-placeholder {
        width: 50px;
        height: 50px;
    }

    .item-name {
        font-size: 14px;
    }

    .btn-quantity {
        width: 30px;
        height: 30px;
    }

    .quantity-display {
        margin: 0 8px;
        font-size: 14px;
    }

    .customer-form,
    .summary-card {
        padding: 20px 15px;
    }

    }
</style>

<section class="cart-section">
    <div class="container">
        <h1 class="page-title">
            <i class="fas fa-shopping-cart me-2"></i>Your Shopping Cart
        </h1>

        @if (Model == null || !Model.OrderItems.Any())
        {
            <div class="empty-cart">
                <i class="fas fa-shopping-cart empty-icon"></i>
                <h3 class="text-muted mb-3">Your cart is empty!</h3>
                <p class="text-muted mb-4">Browse our delicious menu and add items to get started.</p>
                <a asp-controller="MenuItem" asp-action="Index" class="btn-continue">
                    <i class="fas fa-arrow-left me-2"></i>Browse Menu
                </a>
            </div>
        }
        else
        {
            <div class="cart-card">
                <div class="cart-header">
                    <h4><i class="fas fa-bag-shopping me-2"></i>Order Items</h4>
                </div>

                <div class="cart-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th style="width: 40%">Item</th>
                                    <th style="width: 15%" class="text-center">Price</th>
                                    <th style="width: 20%" class="text-center">Quantity</th>
                                    <th style="width: 15%" class="text-center">Subtotal</th>
                                    <th style="width: 10%" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td data-label="Item">
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.MenuItem.ImageUrl))
                                                {
                                                    <img src="@Url.Content(item.MenuItem.ImageUrl)"
                                                         class="item-image"
                                                         alt="@item.MenuItem.Name" />
                                                }
                                                else
                                                {
                                                    <div class="image-placeholder">
                                                        <i class="fas fa-utensils"></i>
                                                    </div>
                                                }

                                                <div class="item-info">
                                                    <div class="item-name">@item.MenuItem.Name</div>
                                                    <div class="item-description">@item.MenuItem.Description</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td data-label="Price" class="text-center">
                                            <span class="price-value">$@item.UnitPrice.ToString("0.00")</span>
                                        </td>
                                        <td data-label="Quantity" class="text-center">
                                            <div class="quantity-controls">
                                                <a asp-action="DecreaseQuantity" asp-route-id="@item.Id"
                                                   class="btn-quantity btn-decrease">
                                                    <i class="fas fa-minus"></i>
                                                </a>
                                                <span class="quantity-display">@item.Quantity</span>
                                                <a asp-action="IncreaseQuantity" asp-route-id="@item.Id"
                                                   class="btn-quantity btn-increase">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </td>
                                        <td data-label="Subtotal" class="text-center">
                                            <span class="subtotal-value">$@((item.Quantity * item.UnitPrice).ToString("0.00"))</span>
                                        </td>
                                        <td data-label="Actions" class="text-center">
                                            <a asp-action="RemoveFromCart" asp-route-id="@item.Id"
                                               class="btn-remove"
                                               onclick="return confirm('Are you sure you want to remove this item?')">
                                                <i class="fas fa-trash me-1"></i>Remove
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <div class="customer-form">
                                <div class="mb-3">
                                    <label for="customerName" class="form-label">
                                        <i class="fas fa-user me-2"></i>Customer Name
                                    </label>
                                    <input type="text"
                                           id="customerName"
                                           class="form-control"
                                           placeholder="Enter your full name"
                                           required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="fas fa-utensils me-2"></i>Order Type
                                    </label>
                                    <select id="orderType" class="form-control" onchange="toggleDeliverySection()">
                                        <option value="DineIn">Dine-In</option>
                                        <option value="Takeout">Takeout</option>
                                        <option value="Delivery">Delivery</option>
                                    </select>
                                </div>

                                <div id="deliverySection" class="delivery-section">
                                    <label for="deliveryAddress" class="form-label">
                                        <i class="fas fa-map-marker-alt me-2"></i>Delivery Address
                                    </label>
                                    <textarea id="deliveryAddress" class="form-control" placeholder="Enter delivery address"></textarea>
                                </div>

                                <div id="estimatedTime" class="estimated-time" style="display:none;">
                                    <i class="fas fa-clock me-2"></i>
                                    Estimated Delivery Time: <strong id="deliveryTimeText"></strong>
                                </div>

                                <button onclick="confirmOrder()" class="btn-confirm mt-3">
                                    <i class="fas fa-check-circle me-2"></i>Confirm Order
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="summary-card">
                                <div class="summary-row">
                                    <span class="summary-label">Items:</span>
                                    <span class="summary-value">@Model.OrderItems.Sum(oi => oi.Quantity)</span>
                                </div>
                                <div class="summary-row">
                                    <span class="summary-label">Subtotal:</span>
                                    <span class="summary-value">$@Model.OrderItems.Sum(oi => oi.Quantity * oi.UnitPrice).ToString("0.00")</span>
                                </div>

                                @if (Model.DiscountAmount > 0)
                                {
                                    <div class="discount-alert">
                                        <h5 class="text-success mb-2">
                                            <i class="fas fa-tag me-2"></i>Discount Applied!
                                        </h5>
                                        <p class="mb-1">
                                            <strong>-$@Model.DiscountAmount.ToString("0.00")</strong>
                                        </p>
                                        <small class="text-muted">@Model.DiscountDescription</small>
                                    </div>
                                }

                                <div class="summary-row total-row">
                                    <span class="total-label">Total:</span>
                                    <span class="total-value">$@Model.TotalPrice.ToString("0.00")</span>
                                </div>

                                @if (TempData["InfoMessage"] != null)
                                {
                                    <div class="alert-info text-center mt-3">
                                        @TempData["InfoMessage"]
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="MenuItem" asp-action="Index" class="btn-continue">
                            <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<script>
    function toggleDeliverySection() {
        const type = document.getElementById('orderType').value;
        const section = document.getElementById('deliverySection');
        const timeBox = document.getElementById('estimatedTime');

        if (type === 'Delivery') {
            section.classList.add('active');
            timeBox.style.display = 'block';

            const prepTimes = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
                                Model?.OrderItems?
                                                .Where(i => i.MenuItem != null)
                                                .Select(i => i.MenuItem.PreparationTime)
                                                .ToList() ?? new List<int>()
                        ));

            const prepTime = prepTimes.length > 0 ? Math.max(...prepTimes) : 0;
            const totalMinutes = prepTime + 30;
            document.getElementById('deliveryTimeText').innerText = totalMinutes + " minutes";
        } else {
            section.classList.remove('active');
            timeBox.style.display = 'none';
        }
    }

    function confirmOrder() {
        const name = document.getElementById('customerName').value.trim();
        const type = document.getElementById('orderType').value;
        const address = document.getElementById('deliveryAddress').value.trim();

        if (!name) {
            alert('Please enter your name before confirming the order!');
            document.getElementById('customerName').focus();
            return;
        }

        if (type === 'Delivery' && !address) {
            alert('Please enter the delivery address!');
            document.getElementById('deliveryAddress').focus();
            return;
        }

        if (confirm('Are you sure you want to confirm this order?')) {
            const url = '@Url.Action("ConfirmOrder")?id=@Model?.Id'
                + '&customerName=' + encodeURIComponent(name)
                + '&orderType=' + encodeURIComponent(type)
                + '&deliveryAddress=' + encodeURIComponent(address);

            window.location.href = url;
        }
    }

    document.getElementById('customerName')?.addEventListener('keypress', function (e) {
        if (e.key === 'Enter') confirmOrder();
    });
</script>