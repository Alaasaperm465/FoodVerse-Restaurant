@model List<Order>

@{
    ViewData["Title"] = "Shopping Cart";
}
<section class="py-5 bg-light">
    <div class="container">
        <h1 class="text-center mb-5 fw-bold">
            <i class="fas fa-shopping-cart me-2"></i>Your Orders
        </h1>

        @if (Model == null || !Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4 class="text-muted mb-2">No active orders found!</h4>
                <p class="text-muted mb-4">Browse our delicious menu and add items to get started.</p>
                <a asp-controller="MenuItem" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Browse Menu
                </a>
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header d-flex justify-content-between align-items-center bg-white">
                        <h5 class="mb-0">
                            <i class="fas fa-bag-shopping me-2"></i>
                            <span class="badge bg-primary ms-2">@order.Status</span>
                        </h5>
                        <small class="text-muted">@order.CreatedAt.ToString("g")</small>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive mb-4">
                            <table class="table align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Item</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Subtotal</th>
                                        @if (order.Status == "Pending" || order.Status == "Preparing" || order.Status == "Confirmed")
                                        {
                                        <th class="text-center">Actions</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.MenuItem.ImageUrl))
                                                    {
                                                        <img src="@Url.Content(item.MenuItem.ImageUrl)"
                                                             alt="@item.MenuItem.Name"
                                                             class="rounded me-3"
                                                             style="width: 60px; height: 60px; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-secondary d-flex align-items-center justify-content-center rounded me-3"
                                                             style="width: 60px; height: 60px;">
                                                            <i class="fas fa-utensils text-white"></i>
                                                        </div>
                                                    }

                                                    <div>
                                                        <div class="fw-semibold">@item.MenuItem.Name</div>
                                                        <div class="text-muted small">@item.MenuItem.Description</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">$@item.UnitPrice.ToString("0.00")</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-center">$@((item.Quantity * item.UnitPrice).ToString("0.00"))</td>
                                            <td class="text-center">
                                                @if (order.Status == "Pending" || order.Status == "Preparing" || order.Status == "Confirmed")
                                                {
                                                    <a asp-action="RemoveFromCart"
                                                       asp-route-id="@item.Id"
                                                       class="text-danger text-decoration-none"
                                                       onclick="return confirm('Are you sure you want to remove this item?')">
                                                        <i class="fas fa-trash me-1"></i>Remove
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                @if (order.Status == "Pending")
                                {
                                    <div>
                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">
                                                <i class="fas fa-user me-2"></i>Customer Name
                                            </label>
                                            <input type="text"
                                                   id="customerName-@order.Id"
                                                   class="form-control"
                                                   placeholder="Enter your full name"
                                                   required />
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label fw-semibold">
                                                <i class="fas fa-utensils me-2"></i>Order Type
                                            </label>
                                            <select id="orderType-@order.Id" class="form-select" onchange="toggleDeliverySection(@order.Id)">
                                                <option value="DineIn">Dine-In</option>
                                                <option value="Takeout">Takeout</option>
                                                <option value="Delivery">Delivery</option>
                                            </select>
                                        </div>

                                        <div id="deliverySection-@order.Id" class="mb-3 d-none">
                                            <label class="form-label fw-semibold">
                                                <i class="fas fa-map-marker-alt me-2"></i>Delivery Address
                                            </label>
                                            <textarea id="deliveryAddress-@order.Id" class="form-control" placeholder="Enter delivery address"></textarea>
                                        </div>

                                        <button onclick="confirmOrder(@order.Id)" class="btn btn-success">
                                            <i class="fas fa-check-circle me-2"></i>Confirm Order
                                        </button>
                                    </div>
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        This order is currently <strong>@order.Status</strong>.
                                    </div>
                                }
                            </div>

                            <div class="col-lg-6">
                                <div class="border rounded p-3 bg-light">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="fw-semibold">Items:</span>
                                        <span>@order.OrderItems.Sum(oi => oi.Quantity)</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="fw-semibold">Total:</span>
                                        <span>$@order.TotalPrice.ToString("0.00")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</section>

<script>
    function toggleDeliverySection(orderId) {
        const type = document.getElementById(`orderType-${orderId}`).value;
        const section = document.getElementById(`deliverySection-${orderId}`);
        section.classList.toggle("d-none", type !== "Delivery");
    }

    function confirmOrder(orderId) {
        const name = document.getElementById(`customerName-${orderId}`).value.trim();
        const type = document.getElementById(`orderType-${orderId}`).value;
        const address = document.getElementById(`deliveryAddress-${orderId}`).value.trim();

        if (!name) {
            alert("Please enter your name before confirming the order!");
            return;
        }

        if (type === "Delivery" && !address) {
            alert("Please enter the delivery address!");
            return;
        }

        if (confirm("Are you sure you want to confirm this order?")) {
            const url = `/Order/ConfirmOrder?id=${orderId}&customerName=${encodeURIComponent(name)}&orderType=${encodeURIComponent(type)}&deliveryAddress=${encodeURIComponent(address)}`;
            window.location.href = url;
        }
    }
</script>
