@model IEnumerable<RestaurantManagement.Models.MenuItem>

@{
    ViewData["Title"] = "Menu Items";
}

<div class="container py-5">
    <h2 class="text-center mb-4 fw-bold">🍔 Our Delicious Menu</h2>


    <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card shadow-sm border-0 rounded-4 h-100 hover-shadow">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="~/images/@item.ImageUrl"
                                 alt="@item.Name"
                                 class="card-img-top rounded-top-4"
                                 style="height: 160px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="d-flex justify-content-center align-items-center bg-light rounded-top-4" style="height: 160px;">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-success">@item.Name</h5>
                            <p class="text-muted small mb-2">@item.Description</p>
                            <p class="fw-semibold text-primary mb-1">
                                💲@item.Price.ToString("0.00")
                            </p>
                            <p class="text-muted small mb-2">Category: @item.Category?.Name</p>

                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success bg-opacity-75 px-3 py-1 mb-3">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-75 px-3 py-1 mb-3">Unavailable</span>
                            }

                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm rounded-pill">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                            <a asp-controller="Orders" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm rounded-pill">
                                <i class="bi bi-cart-plus"></i> Order Now
                            </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        @* } *@
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        transition: 0.3s ease-in-out;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }
</style>
